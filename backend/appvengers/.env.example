# iBudget Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# --- Database Configuration ---
DB_URL=jdbc:mysql://YOUR_HOST:3306/YOUR_DATABASE?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC&autoReconnect=true
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password

# --- JWT Configuration ---
# Generate a strong secret key (min 32 characters)
# Example generation: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_min_32_chars_recommended_longer

# --- Server Configuration ---
SERVER_PORT=8081
