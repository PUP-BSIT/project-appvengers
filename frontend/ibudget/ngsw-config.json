{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app-shell",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.csr.html",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/icons/**",
          "/**/*.svg",
          "/**/*.cur",
          "/**/*.jpg",
          "/**/*.jpeg",
          "/**/*.png",
          "/**/*.apng",
          "/**/*.webp",
          "/**/*.avif",
          "/**/*.gif",
          "/**/*.otf",
          "/**/*.ttf",
          "/**/*.woff",
          "/**/*.woff2"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-categories",
      "urls": [
        "/api/categories",
        "/api/categories/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "1h"
      }
    },
    {
      "name": "api-budgets",
      "urls": [
        "/api/budgets",
        "/api/budgets/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "30m"
      }
    },
    {
      "name": "api-transactions",
      "urls": [
        "/api/transactions",
        "/api/transactions/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 200,
        "maxAge": "30m"
      }
    },
    {
      "name": "api-savings",
      "urls": [
        "/api/savings",
        "/api/savings/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 100,
        "maxAge": "30m"
      }
    },
    {
      "name": "api-notifications",
      "urls": [
        "/api/notifications",
        "/api/notifications/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "api-user-profile",
      "urls": [
        "/api/user/profile"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 1,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "api-reports",
      "urls": [
        "/api/transactions/reports/**",
        "/api/expenses/summary"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 50,
        "maxAge": "1h"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/api/**",
    "!/ws-notifications/**",
    "!/oauth2/**",
    "!/login/oauth2/**",
    "!/auth/callback/**"
  ]
}
